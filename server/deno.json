{
  "tasks": {
    "dev": "deno run -A main.ts",
    "compile:mac:debug": "deno compile -A --include ../web/dist --unstable-sloppy-imports --include ../target/debug/libmidi_driver.dylib --output homebrewdj ./main.ts",
    "compile:mac:release": "deno compile -A --include ../web/dist --unstable-sloppy-imports --include ../target/release/libmidi_driver.dylib --output homebrewdj ./main.ts",
    "compile:win:debug": "deno compile -A --include ../web/dist --unstable-sloppy-imports --include ../target/debug/midi_driver.dll --output homebrewdj ./main.ts",
    "compile:win:release": "deno compile -A --include ../web/dist --unstable-sloppy-imports --include ../target/release/midi_driver.dll --output homebrewdj ./main.ts",
    "compile:linux:debug": "deno compile -A --include ../web/dist --unstable-sloppy-imports --include ../target/debug/libmidi_driver.so --output homebrewdj ./main.ts",
    "compile:linux:release": "deno compile -A --include ../web/dist --unstable-sloppy-imports --include ../target/release/libmidi_driver.so --output homebrewdj ./main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@hono/hono": "jsr:@hono/hono",
    "@driver": "../midi-driver/mod.ts",
    "@toml": "jsr:@std/toml",
    "@widgets": "../web/bindings/Overlay.ts"
  }
}
