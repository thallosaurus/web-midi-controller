{
  "exports": "./mod.ts",
  "tasks": {
    "dev": "deno run -A --watch main.ts",
    "compile:mac:debug": "cargo build -p midi-driver && mkdir -p ./native/ && mv ../target/debug/libmidi_driver.dylib ./native/",
    "compile:linux:debug": "cargo build -p midi-driver && mkdir -p ./native/ && mv ../target/debug/libmidi_driver.so ./native/",
    "compile:win:debug": "cargo build -p midi-driver && mkdir -p ./native/ && mv ../target/debug/midi_driver.dll ./native/",
    "compile:mac:release": "cargo build -p midi-driver --release && mkdir -p ./native && mv ../target/release/libmidi_driver.dylib ./native/",
    "compile:linux:release": "cargo build -p midi-driver --release && mkdir -p ./native && mv ../target/release/libmidi_driver.so ./native/",
    "compile:win:release": "cargo build -p midi-driver --release && mkdir -p ./native && mv ../target/release/midi_driver.dll ./native/",
    "monitor": "deno run -A monitor.ts",
    "create:npm": "mkdir -p npm && mkdir -p npm/native && cp native/libmidi_driver.dylib npm/native/libmidi_driver.dylib && cp package.node.json npm/package.json && deno bundle mod.ts > npm/index.js"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  }
}
